<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudMaui.Views.NovoProduto"
             Title="NovoProduto">
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="Salvar" 
            Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <Label Text="Descrição do Produto:" />
        <Entry x:Name="txtQuantidade" Placeholder="Digite a descrição do produto"/>
        <Label Text="Quantidade do Produto:" />
        <Entry x:Name="txtDescricao" Placeholder="Digite a quantidade do produto" Keyboard="Numeric" />
        <Label Text="Preço do Produto:" />
        <Entry x:Name="txtPreco" Placeholder="Digite o preço do produto" Keyboard="Numeric" />

    </VerticalStackLayout>
</ContentPage>